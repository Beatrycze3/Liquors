@model Liquors.ViewModels.WineModel

<div class="container">
    <div class="row">
        <div class="col-8">

            <h3>Fill form to add to database</h3>

            @using (Html.BeginForm("Add", "Wine", FormMethod.Post))
            {
                <div class="form-group row">
                    @Html.LabelFor(x => x.Name, new {@class = "col-form-label col-4"})
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.Type, new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Type, new { @class = "form-control" })
                    </div>
                    @*@Html.DropDownList("type", Html.GetEnumSelectList(typeof(Liquors.Model.WineModel.Type)))*@
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.Country, new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.Region, new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Region, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(x => x.Winery, new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Winery, new { @class = "form-control" })
                    </div>
                </div>

                
                <button class="btn btn-primary">Add</button>
            }
            @Html.ValidationSummary()
        </div>
    </div>
</div>
